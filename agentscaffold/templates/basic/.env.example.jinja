# Environment variables for {{agent_name}}
# Replace placeholder values with your actual credentials

{% if llm_provider == "openai" %}
# OpenAI API (gpt-4o, etc.)
OPENAI_API_KEY=your-openai-api-key
{% elif llm_provider == "anthropic" %}
# Anthropic API (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key
{% elif llm_provider == "huggingface" %}
# HuggingFace Inference API
HUGGINGFACE_API_KEY=your-huggingface-api-key
{% elif llm_provider == "ollama" %}
# Local LLMs with Ollama
OLLAMA_HOST=http://localhost:11434
{% endif %}

{% if search_provider == "brave" %}
# Brave Search API
BRAVE_API_KEY=your-brave-api-key
{% elif search_provider == "browserbase" %}
# BrowserBase API
BROWSERBASE_API_KEY=your-browserbase-api-key
{% endif %}

{% if memory_provider == "supabase" %}
# Supabase Vector DB
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-key
{% elif memory_provider == "milvus" %}
# Milvus Vector DB
MILVUS_URI=your-milvus-uri
{% elif memory_provider == "chromadb" %}
# ChromaDB Vector DB
CHROMA_DB_PATH=./chroma_db
{% endif %}

{% if logging_provider == "logfire" %}
# LogFire observability
LOGFIRE_API_KEY=your-logfire-api-key
{% endif %}

# Daytona configuration (required for 'agentscaffold run')
DAYTONA_API_KEY=your-daytona-api-key
DAYTONA_API_URL=your-daytona-server-url
DAYTONA_TARGET=us